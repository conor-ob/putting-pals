{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": ":"
  },
  "deploy": {
    "startCommand": "pnpm --filter @putting-pals/putting-pals-db db:migrate",
    "region": "europe-west4-drams3a",
    "multiRegionConfig": {
      "europe-west4-drams3a": {
        "numReplicas": 1
      }
    },
    "limitOverride": {
      "containers": {
        "cpu": 1,
        "memoryBytes": 1000000000
      }
    },
    "overlapSeconds": 30,
    "drainingSeconds": 10
  }
}
