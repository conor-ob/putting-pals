{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "apps/proxy/Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "region": "us-west1",
    "multiRegionConfig": {
      "us-west1": {
        "numReplicas": 1
      }
    },
    "sleepApplication": false,
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ALWAYS",
    "restartPolicyMaxRetries": 5
  }
}
