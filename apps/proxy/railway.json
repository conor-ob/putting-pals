{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "apps/proxy/Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300,
    "sleepApplication": false,
    "restartPolicyType": "ALWAYS",
    "restartPolicyMaxRetries": 5,
    "region": "us-west1"
  }
}
