{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "pnpm build --filter @putting-pals/cron"
  },
  "deploy": {
    "startCommand": "pnpm start --filter @putting-pals/cron",
    "cronSchedule": "*/5 * * * *",
    "region": "europe-west4-drams3a",
    "multiRegionConfig": {
      "europe-west4-drams3a": {
        "numReplicas": 1
      }
    },
    "limitOverride": {
      "containers": {
        "cpu": 1,
        "memoryBytes": 1000000000
      }
    },
    "overlapSeconds": 30,
    "drainingSeconds": 10
  },
  "environments": {
    "pr": {
      "deploy": {
        "cronSchedule": "0 0 * * *"
      }
    }
  }
}
