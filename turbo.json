{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "clean": {
      "cache": false
    },
    "codegen": {
      "cache": false
    },
    "build": {
      "outputs": ["dist/**"]
    },
    "typecheck": {
      "cache": false
    },
    "test": {
      "outputs": ["coverage/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": ["NODE_ENV", "PORT", "ORIGIN", "DATABASE_URL", "TRPC_API_URL"]
}
