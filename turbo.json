{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "clean": {
      "cache": false
    },
    "codegen": {
      "dependsOn": ["^codegen"],
      "cache": false
    },
    "db:generate": {
      "outputs": ["drizzle/**"]
    },
    "db:migrate": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build", "^codegen"],
      "outputs": ["dist/**"]
    },
    "typecheck": {
      "cache": false
    },
    "test": {
      "outputs": ["coverage/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "PORT",
    "ORIGIN",
    "DATABASE_URL",
    "SERVER_URL",
    "EXPO_PUBLIC_SERVER_URL"
  ]
}
