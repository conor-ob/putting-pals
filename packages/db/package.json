{
  "name": "@pkg/db",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "exports": {
    ".": "./src/db.ts",
    "./schema": "./src/schema.ts"
  },
  "scripts": {
    "clean": "rimraf dist && rimraf .cache && rimraf .turbo && rimraf node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit true",
    "dev": "./scripts/start-database.sh && pnpm db:migrate",
    "db:seed": "tsx ./scripts/seed.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "start": "pnpm db:migrate"
  },
  "dependencies": {
    "drizzle-orm": "catalog:",
    "postgres": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@pkg/eslint": "workspace:*",
    "@pkg/prettier": "workspace:*",
    "@total-typescript/tsconfig": "catalog:",
    "@types/node": "catalog:",
    "dotenv": "catalog:",
    "drizzle-kit": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "rimraf": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@pkg/prettier"
}
